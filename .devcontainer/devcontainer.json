{
  "name": "Ubuntu25.04 with GCC15",
  "build": {
    "dockerfile": "./Dockerfile",
    "context": "."
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "postStartCommand": "mkdir -p /root/.conan2 && conan profile detect || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "llvm-vs-code-extensions.vscode-clangd",
        "vadimcn.vscode-lldb",
        "twxs.cmake",
        "streetsidesoftware.code-spell-checker-russian",
        "streetsidesoftware.code-spell-checker",
        "matepek.vscode-catch2-test-adapter"
      ]
    }
  },
  "mounts": [
    "source=${localEnv:USERPROFILE}\\.gitconfig,target=/etc/gitconfig,type=bind,consistency=cached",
    "source=${localEnv:USERPROFILE}\\.conan2,target=/root/.conan2,type=bind,consistency=cached"
  ]
}
